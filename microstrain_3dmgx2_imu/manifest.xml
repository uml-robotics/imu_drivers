<package>
  <description brief="Driver for 3DM-GX2 compatible IMUs.">
    A driver for IMUs compatible the microstrain 3DM-GX2 protocol. Includes 
    a heavily modified standalone driver pulled from the player distribution, 
    and a ROS node.
  </description>
  <author>Jeremy Leibs, Blaise Gassend</author>
  <license>LGPL</license>
  <review status="API cleared" notes="Dec 2009"/>
  <url>http://www.ros.org/wiki/microstrain_3dmgx2_imu</url>
  <depend package="roscpp"/>
  <depend package="sensor_msgs"/>
  <depend package="self_test"/>
  <depend package="diagnostic_updater"/>
  <depend package="tf"/>
  <depend package="std_srvs"/>
  <export>
    <cpp cflags="-I${prefix}/msg/cpp -I${prefix}/srv/cpp -I${prefix}/include" lflags="-L${prefix}/lib -Wl,-rpath,-L${prefix}/lib -l3dmgx2" />
  </export>
</package>
